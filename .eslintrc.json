{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json"
      },
      "extends": ["eslint:recommended", "prettier"],
      "rules": {
        "no-empty-function": "off",
        "no-undef": "off",
        "no-console": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["*.html"],
      "parser": "@angular-eslint/template-parser",
      "extends": ["eslint:recommended"],
      "rules": {}
    }
  ]
}
